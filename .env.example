# APP
APP_ENV=production
APP_DEBUG=false
BASE_URL=https://your-domain.com

# DATABASE
DB_HOST=127.0.0.1
DB_NAME=your_db
DB_USER=your_user
DB_PASS=your_password
DB_CHARSET=utf8mb4

# SMTP (example Gmail using App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_FROM_NAME=YourSite

# RECAPTCHA v2 keys (get from https://www.google.com/recaptcha/admin)
RECAPTCHA_SITE_KEY=your_site_key
RECAPTCHA_SECRET_KEY=your_secret_key

# UPLOADS
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=2097152  # 2MB in bytes
ALLOWED_UPLOAD_TYPES=application/pdf,image/jpeg,image/png
